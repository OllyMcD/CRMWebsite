@page "/"
@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-0 px-0">

    <!-- Hero Section -->
    <div class="hero-banner">
        <div class="hero-overlay"></div>
        <div class="hero-text">
            <MudText Typo="Typo.h3" Class="hero-title">Notre Dame CRM</MudText>
            <MudText Typo="Typo.subtitle1" Class="hero-subtitle">Catholic Sixth Form College</MudText>
        </div>
    </div>

    <!-- Welcome Card -->
    <MudPaper Elevation="6" Class="welcome-card">
        <MudText Typo="Typo.h5" Class="text-center mb-3 welcome-title">
            Welcome to the Notre Dame CRM
        </MudText>

        <MudText Class="text-center mb-5 welcome-desc">
            This secure platform empowers Notre Dame staff and administrators to streamline operations—
            including student data, enrolments, communication, and performance oversight. Built with clarity,
            security, and efficiency at its core.
        </MudText>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.body1" Class="text-center mb-4 welcome-subtext">
            Sign in to access your dashboard and tools.
        </MudText>

        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="6">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.Login"
                           Class="hover-scale"
                           OnClick="@(() => NavigationManager.NavigateTo("/login"))">
                    Login
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <br />

    <!-- Footer -->
    <MudGrid Justify="Justify.Center">
        <MudText Align="Align.Center" Typo="Typo.caption" Class="footer-text mt-8 mb-4">
            © Notre Dame CRM – May 2025 | Built for excellence in education
        </MudText>
    </MudGrid>

</MudContainer>

<style>
    .hero-banner {
        background: url('/images/crm-hero-placeholder.jpg') center/fixed no-repeat, #e0e0e0;
        height: 300px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }

    .hero-overlay {
        background-color: rgba(0, 0, 0, 0.4);
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }

    .hero-text {
        z-index: 1;
        text-align: center;
    }

    .hero-title {
        color: white;
        font-weight: 600;
    }

    .hero-subtitle {
        color: #f3f3f3;
    }

    .welcome-card {
        max-width: 700px;
        background-color: #ffffff;
        border-radius: 16px;
        margin-top: 1.5rem;
        padding: 1.5rem;
        margin-left: auto;
        margin-right: auto;
    }

    .welcome-title {
        color: #003366;
        font-weight: 600;
    }

    .welcome-desc {
        color: #555;
    }

    .welcome-subtext {
        color: #666;
    }

    .footer-text {
        color: #999;
        width: 100%;
        text-align: center;
    }


    .hover-scale {
        transition: transform 0.2s ease-in-out;
    }

        .hover-scale:hover {
            transform: scale(1.05);
        }
</style>

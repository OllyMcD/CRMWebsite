@page "/"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <!-- Header with Logo/Title -->
    <MudText Typo="Typo.h4" Class="text-center mb-6" Style="color: #003366;">Notice Dame</MudText>
    <MudText Typo="Typo.h6" Class="text-center mb-8" Style="color: #003366;">CATHOLIC SIXTH FORM COLLEGE</MudText>

    <MudDivider Class="my-6" />

    <!-- Welcome Section -->
    <MudPaper Class="pa-6 mb-8" Elevation="5">
        <MudText Typo="Typo.h5" Class="text-center mb-4" Style="color: #003366;">WELCOME TO YOUR 'OUTSTANDING' SIXTH FORM COLLEGE</MudText>
        <MudText Class="text-center">
            Notre Dame Catholic Sixth Form College is one of the highest-performing colleges in West Yorkshire.
            We are an "Outstanding" Leeds sixth form college and offer a wide range of A Levels, BTEC and T Level
            qualifications for school leavers.
        </MudText>
    </MudPaper>

    <MudDivider Class="my-6" />

    <!-- Videos Section -->
    <MudText Typo="Typo.h6" Class="text-center mb-4" Style="color: #003366;">WATCH OUR COLLEGE VIDEOS</MudText>
    <MudGrid Justify="Justify.Center" Class="mb-8">
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="pa-4" Elevation="5">
                <MudCardContent>
                    <!-- Placeholder for video -->
                    <div class="video-placeholder" style="height: 200px; background-color: #eee; display: flex; align-items: center; justify-content: center;">
                        <MudIcon Icon="@Icons.Material.Filled.PlayCircleOutline" Size="Size.Large" />
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-6" />

    <!-- About Us Navigation -->
    <MudText Typo="Typo.h6" Class="text-center mb-4" Style="color: #003366;">ABOUT US</MudText>
    <MudGrid Justify="Justify.Center" Class="mb-8">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="3" Style="cursor: pointer;" OnClick="@(() => NavigateTo("#why-choose-us"))">
                <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.subtitle1">WHY CHOOSE US?</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="3" Style="cursor: pointer;" OnClick="@(() => NavigateTo("#courses"))">
                <MudIcon Icon="@Icons.Material.Filled.MenuBook" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.subtitle1">COURSES</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="3" Style="cursor: pointer;" OnClick="@(() => NavigateTo("#support"))">
                <MudIcon Icon="@Icons.Material.Filled.Support" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.subtitle1">SUPPORT</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4 text-center" Elevation="3" Style="cursor: pointer;" OnClick="@(() => NavigateTo("#news"))">
                <MudIcon Icon="@Icons.Material.Filled.Newspaper" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.subtitle1">NEWS & EVENTS</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-6" />

    <!-- Ofsted Badge -->
    <MudPaper Class="pa-4 text-center mb-8" Elevation="5" Style="background-color: #003366; color: white;">
        <MudText Typo="Typo.h6">Ofsted Outstanding</MudText>
    </MudPaper>

    <!-- Footer -->
    <MudDivider Class="my-6" />
    <MudText Typo="Typo.caption" Class="text-center">© May 2025</MudText>
    <MudText Typo="Typo.caption" Class="text-center">The 1021 (Local time)</MudText>
</MudContainer>

@code {
    private void NavigateTo(string anchor)
    {
        // Implement navigation logic here
        // For example, scroll to section or navigate to another page
    }
}
        };


    private static readonly MudTheme darkTheme = new()
    {
            
            PaletteLight = new PaletteLight()
            {
                Primary = "#4D88FF",       // Lighter blue for dark mode
                Secondary = "#FFA726",     // Lighter orange for dark mode
                AppbarBackground = "#121212",
                AppbarText = "#FFFFFF",
                Background = "#121212",
                Surface = "#1E1E1E",
                TextPrimary = "#E0E0E0",
                TextSecondary = "#B0B0B0",
                Success = "#81C784"
            },
            Typography = new Typography()
            {
                Default = new DefaultTypography()
                {
                    FontFamily = new[] { "Segoe UI", "Helvetica", "Arial", "sans-serif" },
                    FontSize = "0.875rem",
                    FontWeight = "400",
                    LineHeight = "1.43",
                    LetterSpacing = "0.01071em"
                },
                H1 = new H1Typography()
                {
                    FontSize = "2.5rem",
                    FontWeight = "500",
                    LineHeight = "1.167"
                },
                H6 = new H6Typography()
                {
                    FontSize = "1.25rem",
                    FontWeight = "500",
                    LineHeight = "1.6"
                }
            },
            LayoutProperties = new LayoutProperties()
            {
                DefaultBorderRadius = "4px",
                DrawerWidthRight = "260px"
            }
        };

    private bool darkModeActive = false;
    private MudTheme currentTheme = defaultTheme;

    void ToggleDarkMode()
    {
        this.darkModeActive = !this.darkModeActive;
        this.currentTheme = this.darkModeActive ? darkTheme : defaultTheme;
    }

    void OpenSettings()
    {
        NavigationManager.NavigateTo("/settings");
    }

    void OpenHome()
    {
        NavigationManager.NavigateTo("/home");
    }
}